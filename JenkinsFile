pipeline {
    agent any
    parameters{
        string(name: 'NAME', defaultValue: 'World', description: 'Who to say hello to?')
    }
    stages {
        stage('build') {
            steps {
                build()
            }
        }
        stage('deploy-dev') {
            steps {
                deploy("DEV")
            }
        }
        stage('test-dev') {
            steps {
                test("DEV")
            }
        }
        stage('deploy-stg') {
            steps {
                deploy("STG")
            }
        }
        stage('test-stg') {
            steps {
                test("STG")
            }
        }
        stage('deploy-prd') {
            steps {
                deploy("PRD")
            }
        }
        stage('test-prd') {
            steps {
                test("PRD")
            }
        }
    }
    
}

def build(){
    echo "Building of node app is starting..."
}

def deploy(String environment){
    echo "Deployment of node app on ${environment} environment is starting..."
}

def test(String environment){
    echo "API test execution agains node app on ${environment} environment is starting..."
}